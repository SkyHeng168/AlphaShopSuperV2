@model AlphaShop.Models.ProductDto
@{
    ViewData["Title"] = "Edit Product";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm overflow-hidden">
                <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center p-4">
                    <h4 class="mb-0 fw-semibold text-dark">
                        <i class="fas fa-cube me-2 text-primary"></i>Edit Product
                    </h4>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-sm btn-light">
                        <i class="fas fa-arrow-left me-1"></i> Back to Products
                    </a>
                </div>

                <div class="card-body px-4 py-3">
                    <form asp-controller="Product" asp-action="EditProduct" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                        <div class="row g-4">
                            <!-- Left Column -->
                            <div class="col-lg-6">
                                <!-- Product Information -->
                                <div class="card mb-4">
                                    <div class="card-header bg-light-subtle border-bottom px-4 py-3">
                                        <h5 class="mb-0 fw-semibold text-dark">Product Information</h5>
                                    </div>
                                    <div class="card-body p-4">
                                        <div class="mb-3">
                                            <label asp-for="ProductName" class="form-label fw-medium">Product Name*</label>
                                            <input asp-for="ProductName" class="form-control" placeholder="Enter product name" required />
                                            <div class="invalid-feedback">Please provide a product name.</div>
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="ProductDescription" class="form-label fw-medium">Description</label>
                                            <textarea asp-for="ProductDescription" class="form-control" rows="3" placeholder="Detailed product description"></textarea>
                                        </div>
                                        <div class="row g-3">
                                            <div class="col-md-6">
                                                <label asp-for="BrandId" class="form-label fw-medium">Brand*</label>
                                                <select asp-for="BrandId" asp-items="ViewBag.Brands" class="form-select" required>
                                                    <option value="" disabled selected>Select brand</option>
                                                </select>
                                                <div class="invalid-feedback">Please select a brand.</div>
                                            </div>
                                            <div class="col-md-6">
                                                <label asp-for="CategoryId" class="form-label fw-medium">Category*</label>
                                                <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select" required>
                                                    <option value="" disabled selected>Select category</option>
                                                </select>
                                                <div class="invalid-feedback">Please select a category.</div>
                                            </div>
                                        </div>
                                        <div class="row g-3 mt-3">
                                            <div class="col-md-6">
                                                <label asp-for="SupplierId" class="form-label fw-medium">Supplier*</label>
                                                <select asp-for="SupplierId" asp-items="ViewBag.Suppliers" class="form-select" required>
                                                    <option value="" disabled selected>Select supplier</option>
                                                </select>
                                                <div class="invalid-feedback">Please select a supplier.</div>
                                            </div>
                                            <div class="col-md-6">
                                                <label asp-for="WareHouseId" class="form-label fw-medium">Warehouse*</label>
                                                <select asp-for="WareHouseId" asp-items="ViewBag.Warehouses" class="form-select" required>
                                                    <option value="" disabled selected>Select warehouse</option>
                                                </select>
                                                <div class="invalid-feedback">Please select a warehouse.</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Pricing -->
                                <div class="card mb-4">
                                    <div class="card-header bg-light-subtle border-bottom px-4 py-3">
                                        <h5 class="mb-0 fw-semibold text-dark">Pricing</h5>
                                    </div>
                                    <div class="card-body p-4">
                                        <div class="row g-3">
                                            <div class="col-md-6">
                                                <label asp-for="Profits" class="form-label fw-medium">Profit %*</label>
                                                <div class="input-group">
                                                    <input asp-for="Profits" type="number" step="0.01" class="form-control" placeholder="0" />
                                                    <span class="input-group-text">%</span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <label asp-for="DisccoutPrice" class="form-label fw-medium">Discount Price</label>
                                                <div class="input-group">
                                                    <input asp-for="DisccoutPrice" type="number" step="0.01" class="form-control" placeholder="0" />
                                                    <span class="input-group-text">%</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Right Column -->
                            <div class="col-lg-6">
                                <!-- Inventory -->
                                <div class="card mb-4">
                                    <div class="card-header bg-light-subtle border-bottom px-4 py-3">
                                        <h5 class="mb-0 fw-semibold text-dark">Inventory</h5>
                                    </div>
                                    <div class="card-body p-4">
                                        <div class="mb-3">
                                            <label asp-for="Weight" class="form-label fw-medium">Weight*</label>
                                            <div class="input-group">
                                                <input asp-for="Weight" type="number" step="0.01" class="form-control" placeholder="0.00" />
                                                <span class="input-group-text">kg</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Status & Image -->
                                <div class="card mb-4">
                                    <div class="card-header bg-light-subtle border-bottom px-4 py-3">
                                        <h5 class="mb-0 fw-semibold text-dark">Status & Media</h5>
                                    </div>
                                    <div class="card-body p-4">
                                        <div class="row mb-4">
                                            <div class="col-6">
                                                <div class="form-check form-switch">
                                                    <input class="form-check-input" type="checkbox" id="IsFeatured" name="IsFeatured" value="true" @(Model.IsFeatured == true ? "checked" : "") />
                                                    <label class="form-check-label fw-medium" for="IsFeatured">Featured Product</label>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="form-check form-switch">
                                                    <input class="form-check-input" type="checkbox" id="IsActive" name="IsActive" value="true" @(Model.IsActive == true ? "checked" : "") />
                                                    <label class="form-check-label fw-medium" for="IsActive">Active Product</label>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="card mb-4">
                                            <div class="card-header bg-light-subtle border-bottom px-4 py-3">
                                                <h5 class="mb-0 fw-semibold text-dark">Status & Media</h5>
                                            </div>
                                            <div class="card-body p-4">
                                                <div class="row mb-4">
                                                    <div class="col-6">
                                                        <div class="form-check form-switch">
                                                            <input class="form-check-input" type="checkbox" id="IsFeatured" name="IsFeatured" value="true" @(Model.IsFeatured == true ? "checked" : "") />
                                                            <label class="form-check-label fw-medium" for="IsFeatured">Featured Product</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-6">
                                                        <div class="form-check form-switch">
                                                            <input class="form-check-input" type="checkbox" id="IsActive" name="IsActive" value="true" @(Model.IsActive == true ? "checked" : "") />
                                                            <label class="form-check-label fw-medium" for="IsActive">Active Product</label>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="mb-3">
                                                    <label class="form-label fw-medium">Product Image</label>
                                                    <div class="file-upload-wrapper">
                                                        <div class="dropzone border rounded-2 p-4 text-center" id="dropzone">
                                                            @if (ViewData["ProductImage"] != null)
                                                            {
                                                                <div class="current-image-container">
                                                                    <img src="@ViewData["ProductImage"]" alt="Current Product Image" class="img-fluid rounded-2 border" style="max-height: 200px;" />
                                                                    <div class="d-flex justify-content-between mt-2">
                                                                        <small class="text-muted">Current Image</small>
                                                                        <button type="button" class="btn btn-sm btn-outline-secondary" id="changeImage">
                                                                            <i class="fas fa-sync-alt me-1"></i>Change
                                                                        </button>
                                                                    </div>
                                                                </div>
                                                            }
                                                            else
                                                            {
                                                                <div class="dz-message" data-dz-message>
                                                                    <i class="fas fa-cloud-upload-alt fs-1 text-muted"></i>
                                                                    <p class="my-2">Drag & drop files here or click to browse</p>
                                                                    <p class="small text-muted">Recommended size: 800x800px</p>
                                                                </div>
                                                            }
                                                            <input asp-for="ProductImage" type="file" class="form-control d-none" id="productImageUpload" accept="image/*" />
                                                        </div>
                                                        <div class="preview-container mt-3 d-none" id="imagePreview">
                                                            <img id="previewImage" src="#" alt="Preview" class="img-fluid rounded-2 border" style="max-height: 200px;" />
                                                            <div class="d-flex justify-content-between mt-2">
                                                                <small class="text-muted">New Image Preview</small>
                                                                <button type="button" class="btn btn-sm btn-outline-danger" id="removeImage">
                                                                    <i class="fas fa-trash-alt me-1"></i>Remove
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="d-flex justify-content-between border-top pt-4 mt-3">
                            <button type="reset" class="btn btn-light px-4">
                                <i class="fas fa-undo me-2"></i>Reset
                            </button>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fas fa-save me-2"></i>Update Product
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        :root {
            --primary-color: #4361ee;
            --primary-hover: #3a56d4;
            --success-color: #28a745;
            --danger-color: #dc3545;
            --border-radius: 0.5rem;
            --card-shadow: 0 0.125rem 0.5rem rgba(0, 0, 0, 0.08);
            --transition: all 0.25s ease;
        }

        body {
            background-color: #f8fafc;
            font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
        }

        /* Card styling */
        .card {
            border-radius: var(--border-radius);
            border: none;
            box-shadow: var(--card-shadow);
            transition: var(--transition);
            margin-bottom: 1.5rem;
        }

        .card-header {
            background-color: white;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
            padding: 1rem 1.5rem;
            font-weight: 600;
            color: #2d3748;
        }

        .card-body {
            padding: 1.5rem;
        }

        /* Form elements */
        .form-label {
            font-weight: 500;
            color: #4a5568;
            margin-bottom: 0.5rem;
        }

        .form-control, .form-select {
            border-radius: var(--border-radius);
            border: 1px solid #e2e8f0;
            padding: 0.625rem 1rem;
            font-size: 0.875rem;
            transition: var(--transition);
            height: calc(2.25rem + 2px);
        }

            .form-control:focus, .form-select:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 0.25rem rgba(67, 97, 238, 0.15);
            }

        textarea.form-control {
            min-height: 100px;
        }

        /* Buttons */
        .btn {
            border-radius: var(--border-radius);
            padding: 0.625rem 1.25rem;
            font-weight: 500;
            transition: var(--transition);
        }

        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

            .btn-primary:hover {
                background-color: var(--primary-hover);
                border-color: var(--primary-hover);
                transform: translateY(-1px);
            }

        .btn-light {
            background-color: #f8f9fa;
            border-color: #e2e8f0;
        }

            .btn-light:hover {
                background-color: #e9ecef;
                border-color: #dae0e5;
            }

        .btn-outline-danger {
            color: var(--danger-color);
            border-color: var(--danger-color);
        }

            .btn-outline-danger:hover {
                background-color: var(--danger-color);
            }

        /* Input groups */
        .input-group-text {
            background-color: #f8f9fa;
            border-color: #e2e8f0;
            color: #6c757d;
        }

        /* Dropzone */
        .dropzone {
            border: 2px dashed #e2e8f0;
            border-radius: var(--border-radius);
            background-color: #f8f9fa;
            padding: 2rem;
            text-align: center;
            cursor: pointer;
            transition: var(--transition);
        }

            .dropzone:hover {
                border-color: var(--primary-color);
                background-color: rgba(67, 97, 238, 0.03);
            }

        .dz-message i {
            font-size: 2rem;
            color: #adb5bd;
            margin-bottom: 0.5rem;
        }

        .dz-message p {
            margin-bottom: 0.25rem;
            color: #6c757d;
        }

        /* Toggle switches */
        .form-switch .form-check-input {
            width: 2.5em;
            height: 1.5em;
            margin-left: -0.5em;
        }

        .form-check-input:checked {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

        /* Image preview */
        .current-image-container, .preview-container {
            text-align: center;
        }

            .current-image-container img, #previewImage {
                max-height: 200px;
                max-width: 100%;
                object-fit: contain;
                border-radius: var(--border-radius);
                border: 1px solid #e2e8f0;
                background-color: white;
                padding: 0.5rem;
            }

        /* Layout improvements */
        .container-fluid {
            padding-left: 2rem;
            padding-right: 2rem;
        }

        .card-header.bg-white {
            background-color: white !important;
        }

        /* Responsive adjustments */
        @@media (max-width: 992px) {
            .container-fluid

        {
            padding-left: 1rem;
            padding-right: 1rem;
        }

        .card-body {
            padding: 1.25rem;
        }

        }

        /* Form validation */
        .is-invalid {
            border-color: var(--danger-color);
        }

        .invalid-feedback {
            font-size: 0.75rem;
            color: var(--danger-color);
        }

        /* Section headers */
        h4, h5 {
            font-weight: 600;
        }

        h4 {
            color: #2d3748;
        }

        h5 {
            font-size: 1.1rem;
            color: #4a5568;
        }

        /* Status switches container */
        .status-switches {
            background-color: #f8f9fa;
            border-radius: var(--border-radius);
            padding: 1rem;
            margin-bottom: 1.5rem;
        }
    </style>
}

@section Scripts {
    <script>
                // Image upload functionality
        document.addEventListener('DOMContentLoaded', function () {
            const dropzone = document.getElementById('dropzone');
            const fileInput = document.getElementById('productImageUpload');
            const previewImage = document.getElementById('previewImage');
            const imagePreview = document.getElementById('imagePreview');
            const removeBtn = document.getElementById('removeImage');
            const changeImageBtn = document.getElementById('changeImage');
            const currentImageContainer = document.querySelector('.current-image-container');

            // Handle click on dropzone (only if no current image or clicking on change button)
            if (changeImageBtn) {
                changeImageBtn.addEventListener('click', () => fileInput.click());
            } else {
                dropzone.addEventListener('click', () => fileInput.click());
            }

            fileInput.addEventListener('change', function () {
                const file = this.files[0];
                if (file && file.type.startsWith('image/')) {
                    const reader = new FileReader();
                    reader.onload = function (e) {
                        previewImage.src = e.target.result;
                        imagePreview.classList.remove('d-none');

                        // Hide current image if changing
                        if (currentImageContainer) {
                            currentImageContainer.classList.add('d-none');
                        }
                    };
                    reader.readAsDataURL(file);
                }
            });

            removeBtn?.addEventListener('click', () => {
                fileInput.value = '';
                previewImage.src = '#';
                imagePreview.classList.add('d-none');

                // Show current image again if cancelling change
                if (currentImageContainer) {
                    currentImageContainer.classList.remove('d-none');
                }
            });

            // Drag & Drop Support
            ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
                dropzone.addEventListener(eventName, preventDefaults, false);
            });

            function preventDefaults(e) {
                e.preventDefault();
                e.stopPropagation();
            }

            ['dragenter', 'dragover'].forEach(eventName => {
                dropzone.addEventListener(eventName, highlight, false);
            });

            ['dragleave', 'drop'].forEach(eventName => {
                dropzone.addEventListener(eventName, unhighlight, false);
            });

            function highlight() {
                dropzone.classList.add('border-primary');
                dropzone.style.backgroundColor = 'rgba(67, 97, 238, 0.1)';
            }

            function unhighlight() {
                dropzone.classList.remove('border-primary');
                dropzone.style.backgroundColor = '';
            }

            dropzone.addEventListener('drop', handleDrop, false);

            function handleDrop(e) {
                const dt = e.dataTransfer;
                const files = dt.files;
                if (files.length > 0) {
                    fileInput.files = files;
                    fileInput.dispatchEvent(new Event('change'));
                }
            }
        });
    </script>
}