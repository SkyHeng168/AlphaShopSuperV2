@model AlphaShop.Models.WareHouse

@{
    ViewData["Title"] = "Warehouse Details";
}

<!-- Container -->
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <!-- Card -->
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-dark text-white rounded-top-4 d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="bi bi-box-seam-fill me-2"></i>Warehouse Profile</h4>
                    <a href="/WareHouse/Index" class="btn btn-outline-light btn-sm">
                        <i class="bi bi-arrow-left-circle-fill"></i> Back
                    </a>
                </div>

                <!-- Card Body -->
                <div class="card-body bg-light p-4">
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted fw-semibold">Warehouse ID</div>
                        <div class="col-sm-8">@Model.Id</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted fw-semibold">Name</div>
                        <div class="col-sm-8">@Model.WareHouseName</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted fw-semibold">Code</div>
                        <div class="col-sm-8">@Model.WareHouseCode</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted fw-semibold">Location</div>
                        <div class="col-sm-8">@Model.WareHouseLocation</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted fw-semibold">Phone</div>
                        <div class="col-sm-8">@Model.WareHousePhone</div>
                    </div>
                </div>

                <!-- Card Footer -->
                <div class="card-footer bg-white text-end rounded-bottom-4">
                    <a href="/WareHouse/Edit/@Model.Id" class="btn btn-primary me-2">
                        <i class="bi bi-pencil-fill"></i> Edit
                    </a>
                    <a href="/WareHouse/Index" class="btn btn-secondary">
                        <i class="bi bi-house-door-fill"></i> Home
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>
