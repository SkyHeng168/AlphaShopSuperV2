@model AlphaShop.Models.Customer
@{
    ViewData["Title"] = "Customer Details";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-user-circle mr-2"></i>Customer Profile
                        </h4>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-light btn-sm">
                                <i class="fas fa-edit mr-1"></i>Edit
                            </a>
                            <a asp-action="Index" class="btn btn-light btn-sm">
                                <i class="fas fa-arrow-left mr-1"></i>Back to List
                            </a>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <div class="row">
                        <!-- Profile Column -->
                        <div class="col-md-4 border-right">
                            <div class="text-center">
                                <img src="~/images/@Model.ProfilePicture"
                                     class="rounded-circle mb-3" alt="Profile Image" width="250" height="250">
                                <h3>@Model.FirstName @Model.LastName</h3>

                                <p class="text-muted mb-1">Customer ID: @Model.CustomerId?.ToUpper()</p>

                                <p class="text-muted mb-1">Customer ID: @Model.Id</p>


                                <div class="mt-4">
                                    <span class="badge badge-info ml-2">
                                        Member Since: @Model.RegisterDate.ToString("MMMM dd, yyyy")
                                    </span>
                                </div>
                            </div>

                            <hr>

                            <div class="mt-3">
                                <h5 class="section-title">Contact Information</h5>
                                <ul class="list-unstyled">
                                    <li class="mb-2">
                                        <i class="fas fa-envelope mr-2 text-primary"></i>
                                        <a href="mailto:@Model.Email">@Model.Email</a>
                                    </li>
                                    <li class="mb-2">
                                        <i class="fas fa-phone mr-2 text-primary"></i>
                                        @Model.Phone
                                    </li>
                                    <li class="mb-2">
                                        <i class="fas fa-map-marker-alt mr-2 text-primary"></i>
                                        @Model.Address
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <!-- Details Column -->
                        <div class="col-md-8">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="card mb-4">
                                        <div class="card-header bg-light">
                                            <h6 class="mb-0">Personal Information</h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="form-group row">
                                                <label class="col-sm-4 col-form-label">First Name:</label>
                                                <div class="col-sm-8">
                                                    <p class="form-control-plaintext">@Model.FirstName</p>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-sm-4 col-form-label">Last Name:</label>
                                                <div class="col-sm-8">
                                                    <p class="form-control-plaintext">@Model.LastName</p>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-sm-4 col-form-label">Date of Birth:</label>
                                                <div class="col-sm-8">
                                                    <p class="form-control-plaintext">@Model.DateOfBirth.ToString("MMMM dd, yyyy")</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="card mb-4">
                                        <div class="card-header bg-light">
                                            <h6 class="mb-0">Account Information</h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="form-group row">
                                                <label class="col-sm-4 col-form-label">Username:</label>
                                                <div class="col-sm-8">
                                                    <p class="form-control-plaintext">@Model.FirstName @Model.LastName</p>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-sm-4 col-form-label">Last Login:</label>
                                                <div class="col-sm-8">
                                                    <p class="form-control-plaintext">@(Model.LastLogin.HasValue? Model.LastLogin.Value.ToString("MMMM dd, yyyy HH:mm") : "Never")</p>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-sm-4 col-form-label">Status:</label>
                                                <div class="col-sm-8">
                                                    <p class="form-control-plaintext">
                                                        <span class="badge badge-@(Model.EmailVerified ? "success" : "warning")">
                                                            @(Model.EmailVerified ? "Verified" : "Pending Verification")
                                                        </span>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Additional Sections -->
                            <div class="card mb-4">
                                <div class="card-header bg-light">
                                    <h6 class="mb-0">Address Details</h6>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <h6 class="text-muted">Primary Address</h6>
                                            <address>
                                                <strong>@Model.FirstName @Model.LastName</strong><br>
                                                @Model.Address<br>
                                                @Model.City, @Model.State<br>
                                                @Model.Country
                                            </address>
                                        </div>
                                        
                                    </div>
                                </div>
                            </div>

                            <!-- Customer Activity -->
                            <div class="card">
                                <div class="card-header bg-light">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h6 class="mb-0">Customer Activity</h6>
                                        <div>
                                            <button class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-history mr-1"></i>View Full History
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-sm table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Date</th>
                                                    <th>Activity</th>
                                                    <th>Details</th>
                                                    <th>Value</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <!-- Sample data - replace with actual customer activity -->
                                                <tr>
                                                    <td>@DateTime.Now.AddDays(-2).ToString("MMM dd, yyyy")</td>
                                                    <td>Purchase</td>
                                                    <td>Order #12345</td>
                                                    <td class="text-success">$125.99</td>
                                                </tr>
                                                <tr>
                                                    <td>@DateTime.Now.AddDays(-7).ToString("MMM dd, yyyy")</td>
                                                    <td>Account Update</td>
                                                    <td>Changed phone number</td>
                                                    <td class="text-info">-</td>
                                                </tr>
                                                <tr>
                                                    <td>@DateTime.Now.AddDays(-14).ToString("MMM dd, yyyy")</td>
                                                    <td>Purchase</td>
                                                    <td>Order #12098</td>
                                                    <td class="text-success">$89.50</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .section-title {
            font-size: 1rem;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            color: #6c757d;
            border-bottom: 1px solid #dee2e6;
            padding-bottom: 0.5rem;
            margin-bottom: 1rem;
        }

        .card {
            border-radius: 0.5rem;
        }

        .card-header {
            border-radius: 0.5rem 0.5rem 0 0 !important;
        }

        .form-control-plaintext {
            padding-top: calc(.375rem + 1px);
            padding-bottom: calc(.375rem + 1px);
            margin-bottom: 0;
            line-height: 1.5;
            background-color: transparent;
            border: solid transparent;
            border-width: 1px 0;
        }

        .list-unstyled li {
            padding: 0.25rem 0;
        }
    </style>
}