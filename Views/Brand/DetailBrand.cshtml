@model AlphaShop.Models.Brand

@{
    ViewData["Title"] = Model.Name + " - Brand Profile";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.LogoUrl))
                    {
                        <div class="brand-logo-container">
                            <img src="~/images/Branding/@Model.LogoUrl"
                                 alt="@Model.Name logo"
                                 class="img-fluid rounded-circle"
                                 style="width: 150px; height: 150px; object-fit: cover; border: 3px solid #f8f9fa;">
                        </div>
                    }
                    else
                    {
                        <div class="rounded-circle bg-light d-flex align-items-center justify-content-center mb-3" style="width: 150px; height: 150px; margin: 0 auto;">
                            <i class="fas fa-building fa-3x text-secondary"></i>
                        </div>
                    }
                    <h2 class="card-title">@Model.Name</h2>
                    @if (!string.IsNullOrEmpty(Model.Country))
                    {
                        <p class="text-muted">
                            <i class="fas fa-map-marker-alt"></i> @Model.Country
                        </p>
                    }
                    <div class="d-flex justify-content-center gap-3 mb-3">
                        @if (!string.IsNullOrEmpty(Model.WebsiteUrl))
                        {
                            <a href="@Model.WebsiteUrl" target="_blank" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-globe"></i> Website
                            </a>
                        }
                        @if (!string.IsNullOrEmpty(Model.SocialMediaUrl))
                        {
                            <a href="@Model.SocialMediaUrl" target="_blank" class="btn btn-outline-info btn-sm">
                                <i class="fas fa-hashtag"></i> Social
                            </a>
                        }
                    </div>
                    <div class="form-check form-switch d-flex justify-content-center">
                        <input class="form-check-input" type="checkbox" id="activeStatus" disabled @(Model.IsActive ? "checked" : "")>
                        <label class="form-check-label ms-2" for="activeStatus">
                            @(Model.IsActive ? "Active" : "Inactive")
                        </label>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title mb-4">Brand Information</h4>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mb-4">
                            <h5 class="text-muted">About</h5>
                            <p class="text-justify">@Model.Description</p>
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <h5 class="text-muted">Created</h5>
                                <p>@Model.CreatedAt.ToString("MMMM dd, yyyy")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <h5 class="text-muted">Last Updated</h5>
                                <p>@Model.UpdatedAt.ToString("MMMM dd, yyyy")</p>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-controller="Brand" asp-action="EditBrand" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="fas fa-edit"></i> Edit Brand
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border: none;
            border-radius: 10px;
        }

        .shadow-sm {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075) !important;
        }

        h2, h4, h5 {
            color: #343a40;
        }

        .text-justify {
            text-align: justify;
        }
    </style>
}