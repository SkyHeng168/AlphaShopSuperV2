<script>
    document.addEventListener('DOMContentLoaded', function() {
        try {
            // 1. Safely get the canvas element
            const canvas = document.getElementById('inventoryFlowChart');
            if (!canvas) {
                console.error('Chart canvas element not found');
                return;
            }
            const ctx = canvas.getContext('2d');

            // 2. Safely get and verify the data
            const stockData = @Html.Raw(Json.Serialize(Model?.StockTransactions ?? []));
            if (!Array.isArray(stockData)) {
                console.error('Stock data is not an array:', stockData);
                return;
            }

            console.log('Loaded stock data:', stockData); // Debug output

            // 3. Improved data processing with error handling
            const processStockData = (transactions) => {
                const monthlyData = {};

                // Convert to array if it isn't one
                const transactionsArray = Array.isArray(transactions) ? transactions : [];

                transactionsArray.forEach(transaction => {
                    try {
                        // Handle date more robustly
                        const date = transaction.stockTransactionDate
                            ? new Date(transaction.stockTransactionDate)
                            : new Date();

                        if (isNaN(date.getTime())) {
                            console.warn('Invalid date:', transaction.stockTransactionDate);
                            return;
                        }

                        const monthYear = `${date.getFullYear()}-${(date.getMonth()+1).toString().padStart(2, '0')}`;
                        const monthName = date.toLocaleString('default', { month: 'short' });
                        const displayDate = `${monthName} ${date.getFullYear()}`;

                        const direction = transaction.direction === 0 ? 'In' : 'Out';

                        if (!monthlyData[monthYear]) {
                            monthlyData[monthYear] = {
                                display: displayDate,
                                'In': 0,
                                'Out': 0
                            };
                        }

                        // Handle quantity - check for common field names
                        let quantity = 0;
                        if (transaction.inventoryLogs?.length) {
                            quantity = transaction.inventoryLogs.reduce((sum, log) => {
                                return sum + (log.quantity || log.qty || log.Quantity || 0);
                            }, 0);
                        }

                        monthlyData[monthYear][direction] += quantity;
                    } catch (e) {
                        console.error('Error processing transaction:', transaction, e);
                    }
                });

                // Sort by year-month keys
                const sortedMonths = Object.keys(monthlyData).sort();

                return {
                    labels: sortedMonths.map(key => monthlyData[key].display),
                    inData: sortedMonths.map(key => monthlyData[key].In),
                    outData: sortedMonths.map(key => monthlyData[key].Out)
                };
            };

            // 4. Process data with fallback for empty data
            const processedData = stockData.length ? processStockData(stockData) : {
                labels: [],
                inData: [],
                outData: []
            };

            console.log('Processed chart data:', processedData); // Debug output

            // 5. Create chart only if we have data
            if (processedData.labels.length === 0) {
                console.warn('No data available for chart');
                canvas.insertAdjacentHTML('afterend',
                    '<div class="alert alert-info">No inventory data available</div>');
                return;
            }

            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: processedData.labels,
                    datasets: [
                        {
                            label: 'Stock In',
                            data: processedData.inData,
                            backgroundColor: '#6777ef',
                            borderColor: '#6777ef',
                            borderWidth: 1
                        },
                        {
                            label: 'Stock Out',
                            data: processedData.outData,
                            backgroundColor: '#ffa426',
                            borderColor: '#ffa426',
                            borderWidth: 1
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        x: {
                            stacked: false,
                            grid: { display: false }
                        },
                        y: {
                            beginAtZero: true,
                            grid: {
                                drawBorder: false,
                                color: '#f2f2f2'
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        tooltip: {
                            mode: 'index',
                            intersect: false,
                            callbacks: {
                                label: function(context) {
                                    return `${context.dataset.label}: ${context.raw} items`;
                                }
                            }
                        }
                    }
                }
            });

        } catch (error) {
            console.error('Error initializing chart:', error);
        }
    });
</script>